{
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "newLine": "LF",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "../dist",
    "target": "esnext",
  },
  "exclude": [
    "node_modules"
  ]
}
